<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.project.oee.OEECalculation"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:scrollbarStyle="insideOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/date_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="1dp"
                android:background="@drawable/bg_stroke"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/banar1"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:padding="2dp"
                        android:src="@drawable/ic_calculator"/>

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/divider"></View>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/banar11"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:tint="@color/colorPrimaryDark"
                            android:padding="1dp"
                            android:src="@drawable/ic_machine"/>

                        <customfonts.MyTextViewBold
                            android:id="@+id/machine"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/banar11"
                            android:layout_marginLeft="5dp"
                            android:text="-"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"

                        android:background="@color/divider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp">

                        <LinearLayout
                            android:id="@+id/list_projek_sur"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/b"
                                    android:layout_width="21dp"
                                    android:layout_height="21dp"
                                    android:padding="2dp"
                                    android:tint="@color/colorPrimaryDark"
                                    android:src="@drawable/ic_sum"/>

                                <customfonts.MyTextViewBold
                                    android:id="@+id/ttnm"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Total Time"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="12dp" />

                            </LinearLayout>

                            <customfonts.MyTextViewBold
                                android:id="@+id/ttime"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_horizontal"
                                android:text="-"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="18dp" />
                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/divider"></View>

                        <LinearLayout
                            android:id="@+id/list_projek_su"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/a"
                                    android:layout_width="21dp"
                                    android:layout_height="21dp"
                                    android:padding="1dp"
                                    android:layout_marginRight="2dp"
                                    android:tint="@color/colorPrimaryDark"
                                    android:src="@drawable/ic_proses"/>

                                <customfonts.MyTextViewBold
                                    android:id="@+id/panm"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Processed Amount"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="12dp" />
                            </LinearLayout>

                            <customfonts.MyTextViewBold
                                android:id="@+id/pamount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:gravity="center_horizontal"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="18dp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/red"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="2dp"
                android:paddingBottom="2dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ba1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:padding="2dp"
                        android:layout_marginRight="2dp"
                        android:tint="@color/white"
                        android:src="@drawable/ic_info"/>

                    <customfonts.MyTextViewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap the name input label to see variable information!"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="1dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="7dp">

                    <customfonts.MyTextViewRegular
                        android:id="@+id/dnm"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:layout_weight="2"
                        android:text="% Downtime"
                        android:textColor="@color/sub_text"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/downtime_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:hint="Input % downtime"
                        android:inputType="numberDecimal"
                        android:textSize="13sp"
                        app:met_iconLeft="@drawable/ic_down"
                        app:met_iconPadding="0dp" />

                    <customfonts.MyTextViewRegular
                        android:id="@+id/down_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="% (percent)"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:paddingBottom="1dp"
                    android:paddingTop="7dp">

                    <customfonts.MyTextViewRegular
                        android:id="@+id/tdnm"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:layout_weight="2"
                        android:text="Total Downtime"
                        android:textColor="@color/sub_text"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/total_down_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:hint="Input total downtime"
                        android:inputType="numberDecimal"
                        android:textSize="13sp"
                        app:met_iconLeft="@drawable/ic_sum"
                        app:met_iconPadding="0dp" />

                    <customfonts.MyTextViewRegular
                        android:id="@+id/tot_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="Hours"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:paddingBottom="1dp"
                    android:paddingTop="7dp">

                    <customfonts.MyTextViewRegular
                        android:id="@+id/pdnm"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:layout_weight="2"
                        android:text="Planned Downtime"
                        android:textColor="@color/sub_text"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/plan_down_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:focusable="false"
                        android:hint="Input planned downtime"
                        android:inputType="numberDecimal"
                        android:textSize="13sp"
                        app:met_iconLeft="@drawable/ic_plan"
                        app:met_iconPadding="0dp" />

                    <customfonts.MyTextViewRegular
                        android:id="@+id/plan_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="Hours"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:paddingBottom="1dp"
                    android:paddingTop="7dp">

                    <customfonts.MyTextViewRegular
                        android:id="@+id/ltnm"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:layout_weight="2"
                        android:text="Loading Time"
                        android:textColor="@color/sub_text"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/loading_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:focusable="false"
                        android:hint="Input loading time"
                        android:inputType="numberDecimal"
                        android:textSize="13sp"
                        app:met_iconLeft="@drawable/ic_operating"
                        app:met_iconPadding="0dp" />

                    <customfonts.MyTextViewRegular
                        android:id="@+id/load_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="Hours"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:paddingBottom="1dp"
                    android:paddingTop="7dp">

                    <customfonts.MyTextViewRegular
                        android:id="@+id/tdlnm"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:layout_weight="2"
                        android:text="Total Delay"
                        android:textColor="@color/sub_text"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/total_delay"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:focusable="false"
                        android:hint="Input total delay"
                        android:inputType="numberDecimal"
                        android:textSize="13sp"
                        app:met_iconLeft="@drawable/ic_sum"
                        app:met_iconPadding="0dp" />

                    <customfonts.MyTextViewRegular
                        android:id="@+id/tot_delay"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="Hours"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:paddingBottom="1dp"
                    android:paddingTop="7dp">

                    <customfonts.MyTextViewRegular
                        android:id="@+id/whnm"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:layout_weight="2"
                        android:text="% Working Hours"
                        android:textColor="@color/sub_text"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/working_hours"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:focusable="false"
                        android:hint="Input working hours"
                        android:inputType="numberDecimal"
                        android:textSize="13sp"
                        app:met_iconLeft="@drawable/ic_time"
                        app:met_iconPadding="0dp" />

                    <customfonts.MyTextViewRegular
                        android:id="@+id/work_hour"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="% (Percent)"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="25dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle3"
                        android:gravity="center"
                        android:orientation="vertical">

                        <customfonts.MyTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:padding="10dp"
                            android:text="COUNTING"
                            android:textColor="#ffff"
                            android:textSize="12dp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
</ScrollView>